{
  "compilerOptions": {
    "jsx": "react",
    "baseUrl": "src",
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "es6",
    "lib": ["es2022", "ES6", "DOM"],
    "target": "es6",
    "allowJs": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "suppressImplicitAnyIndexErrors": false,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "types": ["node"]
  },
  "include": ["src/**/*", "public/serviceWorker.js", "src/globals.d.ts"]
}
